{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],   
    "allowJs": true,                                     
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./vite.config.ts",
    "src"
  ]
}
